<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Linear.Full"
    tools:context=".ExtraActivity">

    <ScrollView style="@style/Scroll">

        <LinearLayout style="@style/Linear.Padding">

            <TextView
                android:id="@+id/spend_summary"
                style="@style/Text.Header"
                android:paddingBottom="@dimen/activity_vertical_margin"/>

            <EditText
                android:id="@+id/extra_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/extra_info"
                android:inputType="text|textCapSentences|textAutoComplete|textAutoCorrect"
                android:minLines="3"
                android:textSize="18sp" />

            <Button
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:id="@+id/change_date"
                style="@style/Button" />

            <Button
                android:id="@+id/change_time"
                style="@style/Button" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
